CREATE DATABASE light_control_system;
USE light_control_system;

CREATE TABLE LDR1Data(
ReadingDate DATETIME NOT NULL PRIMARY KEY,
LDR_Reading DECIMAL(10,5) NOT NULL
);

CREATE TABLE LDR2Data(
ReadingDate DATETIME NOT NULL PRIMARY KEY,
LDR_Reading DECIMAL(10,5) NOT NULL
);

CREATE TABLE LDR3Data(
ReadingDate DATETIME NOT NULL PRIMARY KEY,
LDR_Reading DECIMAL(10,5) NOT NULL
);

CREATE TABLE User_Info(
User_ID  INT NOT NULL PRIMARY KEY AUTO_INCREMENT,
User_Name VARCHAR(50) NOT NULL,
User_Surname VARCHAR(50) NOT NULL,
Passwrd VARCHAR(10) NOT NULL,
GH_Area INT NOT NULL
)
